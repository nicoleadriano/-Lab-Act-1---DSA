def print_diamond(n):
    if n % 2 == 0:
        return "Please provide an odd integer."
    
    for i in range(n // 2 + 1):
        spaces = " " * (n // 2 - i)
        stars = "*" * (2 * i + 1)
        print(spaces + stars)
    
    for i in range(n // 2 - 1, -1, -1):
        spaces = " " * (n // 2 - i)
        stars = "*" * (2 * i + 1)
        print(spaces + stars)

print_diamond(5)

